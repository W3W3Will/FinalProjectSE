<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to PawSitter!"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/slogan"
            android:text="Connect with reliable sitters who will provide the best care possible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <Button
        android:id="@+id/logingoogle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#EBEBEB"
        android:text="Sign Up with Google"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_g_mobiledata_24"
        android:drawablePadding="10dp"
        >

    </Button>



    <LinearLayout
        android:id="@+id/respondfieldemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_below="@id/logingoogle">

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textFontWeight="200"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Email"
            android:textSize="13dp"
            android:padding="8dp"
            android:background="#EBEBEB"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/respondfieldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_below="@id/respondfieldemail">

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textFontWeight="200"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:padding="8dp"
            android:textSize="13dp"
            android:background="#EBEBEB"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/respondfieldconfirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_below="@id/respondfieldpassword">

        <TextView
            android:text="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textFontWeight="200"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:padding="8dp"
            android:textSize="13dp"
            android:background="#EBEBEB"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/tos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/respondfieldconfirmpassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="I accept the Terms of Use and Provacy Policy" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tos"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginRight="45dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FE6232"
        android:text="Sign Up"
        />


</RelativeLayout>